/*---TEXTAREA-------------------------------------------------------------*/
.txtar_2 {
	height: 30px;
	border: 1px solid rgba(70,70,70,.6);
	background-color: #4c4f54;
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
	transition: 
		border-color ease-in-out .15s,
		box-shadow ease-in-out .15s;
	resize: none;
	text-align: center;
	font-size: 15px;
	color: #f44336;
	font-weight: bold;
}

.txtar_2:focus {
	border-color: #66afe9;
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(102,175,233,.6);
}
.txtar_2 {
	width: 100%;
	margin-bottom: 30px;
}
/*---СДВИГ PLACEHOLDER---------------------------------------------------------------------------*/
.txtar_2::-webkit-input-placeholder       {text-indent: 0px;   transition: text-indent 0.3s ease;}
.txtar_2::-moz-placeholder                {text-indent: 0px;   transition: text-indent 0.3s ease;}
.txtar_2:-moz-placeholder                 {text-indent: 0px;   transition: text-indent 0.3s ease;}
.txtar_2:-ms-input-placeholder            {text-indent: 0px;   transition: text-indent 0.3s ease;}
.txtar_2:focus::-webkit-input-placeholder {text-indent: 500px; transition: text-indent 0.3s ease;}
.txtar_2:focus::-moz-placeholder          {text-indent: 500px; transition: text-indent 0.3s ease;}
.txtar_2:focus:-moz-placeholder           {text-indent: 500px; transition: text-indent 0.3s ease;}
.txtar_2:focus:-ms-input-placeholder      {text-indent: 500px; transition: text-indent 0.3s ease;}


/*---ОТМЕНА СТРЕЛОК В ТЕКСТАРЕИ--------------------------------------*/
input[type=number]::-webkit-outer-spin-button,
input[type=number]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
input[type=number] {-moz-appearance:textfield;}



/*------------------------------------------------------------*/
@media screen and (min-width:200px) and (max-width:480px) {
	.txtar_2 {margin-bottom: 15px;}
}